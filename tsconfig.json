{
   "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2017",
      "sourceMap": false,
      "outDir": "./dist",
      "baseUrl": "./src",
      "incremental": false,
      "esModuleInterop": true,
      "typeRoots": ["node_modules/@types"]
      // "noEmit": true
   },
   "include": ["src/*"],
   "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
